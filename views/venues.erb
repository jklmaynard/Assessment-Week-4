<h1><strong><%= @venue.name() %></strong></h1>
<br>

<h3> <%= @venue.location() %> </h3>

<form action="/venues/<%= @venue.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="description">Add Description</label>
  <textarea name="description" rows="5" id="description" class="form-control"></textarea>
  <br>
  <button type="submit" class="btn btn-sm btn-primary">Add Description</button>
</form>

<h3>Description</h3>
<p><%= @venue.description() %></p>

<form action="/venues/<%= @venue.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class=" btn btn-sm btn-danger">Delete Venue</button>
</form>

<br>
<a href="/">Back to Home Page</a>
